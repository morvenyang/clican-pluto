<?xml version="1.0" encoding="UTF-8"?>
<atv>
	<head>
		<script src="http://10.0.1.5/appletv/javascript/clican.js" />
		<script src="http://10.0.1.5/appletv/javascript/ejs.js" />
		<script src="http://10.0.1.5/appletv/javascript/qq.js" />
		<script src="http://10.0.1.5/appletv/javascript/yyets.js" />
	</head>
	<body>
		<scroller id="com.sample.movie-shelf">
			<items>
				<grid id="grid_2" columnCount="3">
					<items>
						<goldenPoster id="gp1"
							onSelect="atv.loadURL('http://10.0.1.5/appletv/ctl/tudou/index.xml');">
							<image>http://10.0.1.5/appletv/image/tudou/tudou.png</image>
							<title>土豆视频</title>
						</goldenPoster>
						<goldenPoster id="gp2" onSelect="qqClient.loadIndexPage('',0,3);">
							<image>http://10.0.1.5/appletv/image/qq/qq.png</image>
							<title>腾讯视频</title>
						</goldenPoster>
						<goldenPoster id="gp3" onSelect="yyetsClient.loadIndexPage('',1,'movie');">
							<image>http://10.0.1.5/appletv/image/yyest/yyest.png</image>
							<title>人人影视</title>
						</goldenPoster>
						<goldenPoster id="gp4"
							onSelect="atv.loadURL('http://10.0.1.5/appletv/ctl/baibian/index.xml');">
							<image>http://10.0.1.5/appletv/image/baibian/baibian.png</image>
							<title>微电影</title>
						</goldenPoster>
						<goldenPoster id="gp5"
							onSelect="atv.loadURL('http://10.0.1.5/appletv/ctl/weibo/checkAccessToken.xml?deviceId='+atv.device.udid);">
							<image>http://10.0.1.5/appletv/image/weibo/weibo.png</image>
							<title>新浪微博</title>
						</goldenPoster>
						<goldenPoster id="gp6"
							onSelect="atv.loadURL('http://10.0.1.5/appletv/ctl/taobao/index.xml');">
							<image>http://10.0.1.5/appletv/image/taobao/taobao.png</image>
							<title>淘宝</title>
						</goldenPoster>
						<goldenPoster id="gp7"
							onSelect="userconfig.loadConfigPage();">
							<image>http://10.0.1.5/appletv/image/announcements.png</image>
							<title>设置</title>
						</goldenPoster>
						<goldenPoster id="gp8"
							onSelect="atv.loadURL('http://10.0.1.5/appletv/release.xml');">
							<image>http://10.0.1.5/appletv/image/announcements.png</image>
							<title>升级公告</title>
						</goldenPoster>
					</items>
				</grid>
			</items>
		</scroller>
	</body>
</atv>
