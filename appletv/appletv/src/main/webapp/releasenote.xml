<?xml version="1.0" encoding="UTF-8"?>
<atv>
	<head>
		<script src="http://local.clican.org/appletv/javascript/clican.js" />
		<script src="http://local.clican.org/appletv/javascript/ejs.js" />
		<script src="http://local.clican.org/appletv/javascript/qq.js" />
		<script src="http://local.clican.org/appletv/javascript/yyets.js" />
		<script src="http://local.clican.org/appletv/javascript/tudou.js" />
		<script src="http://local.clican.org/appletv/javascript/youku.js" />
	</head>
	<body>
		<scroller id="com.sample.movie-shelf">
			<items>
				<grid id="grid_2" columnCount="4">
					<items>
						<goldenPoster id="gp0" onSelect="youkuClient.loadIndexPage('',1,96);">
							<image>http://local.clican.org/appletv/image/youku/youku.png</image>
							<title>优库</title>
						</goldenPoster>
						<goldenPoster id="gp1"
							onSelect="tudouClient.loadIndexPage('',1,30);">
							<image>http://local.clican.org/appletv/image/tudou/tudou.png</image>
							<title>土豆视频</title>
						</goldenPoster>
						<goldenPoster id="gp2" onSelect="qqClient.loadIndexPage('',0,3);">
							<image>http://local.clican.org/appletv/image/qq/qq.png</image>
							<title>腾讯视频</title>
						</goldenPoster>
						<goldenPoster id="gp3" onSelect="yyetsClient.loadIndexPage('',1,'movie');">
							<image>http://local.clican.org/appletv/image/yyets/yyets.jpg</image>
							<title>人人影视</title>
						</goldenPoster>
						<goldenPoster id="gp4"
							onSelect="atv.loadURL('http://www.clican.org/appletv/ctl/baibian/index.xml');">
							<image>http://local.clican.org/appletv/image/baibian/baibian.png</image>
							<title>微电影</title>
						</goldenPoster>
						<goldenPoster id="gp5"
							onSelect="atv.loadURL('http://www.clican.org/appletv/ctl/weibo/checkAccessToken.xml?deviceId='+atv.device.udid);">
							<image>http://local.clican.org/appletv/image/weibo/weibo.png</image>
							<title>新浪微博</title>
						</goldenPoster>
						<goldenPoster id="gp6"
							onSelect="atv.loadURL('http://www.clican.org/appletv/ctl/taobao/index.xml');">
							<image>http://local.clican.org/appletv/image/taobao/taobao.png</image>
							<title>淘宝</title>
						</goldenPoster>
						<goldenPoster id="gp7"
							onSelect="atv.loadURL('http://local.clican.org/appletv/release.xml');">
							<image>http://local.clican.org/appletv/image/announcements.png</image>
							<title>升级公告</title>
						</goldenPoster>
					</items>
				</grid>
			</items>
		</scroller>
	</body>
</atv>
