<?xml version="1.0" encoding="UTF-8"?>
<atv>
	<head>
		<script src="http://www.clican.org/appletv/javascript/load.js" />
	</head>
	<body>
		<scroller id="com.sample.movie-shelf">
			<items>
				<grid id="grid_2" columnCount="5">
					<items>
						<moviePoster id="local" featured="true" onSelect="appletv.loadLocalServerIndexPage();">
							<image>http://www.clican.org/appletv/image/local.png</image>
							<title>本地服务器</title>
						</moviePoster>
						<moviePoster id="soku" featured="true" onSelect="sokuClient.loadIndexPage('',1,'tv');">
							<image>http://www.clican.org/appletv/image/soku/soku.png</image>
							<title>搜库</title>
						</moviePoster>
						<moviePoster id="youku" featured="true" onSelect="youkuClient.loadIndexPage('',1,96);">
							<image>http://www.clican.org/appletv/image/youku/youku.png</image>
							<title>优库</title>
						</moviePoster>
						<moviePoster id="tudou"
							featured="true" onSelect="tudouClient.loadIndexPage('',1,30);">
							<image>http://www.clican.org/appletv/image/tudou/tudou.png</image>
							<title>土豆视频</title>
						</moviePoster>
						<moviePoster id="qq" featured="true" onSelect="qqClient.loadIndexPage('',0,3);">
							<image>http://www.clican.org/appletv/image/qq/qq.png</image>
							<title>腾讯视频</title>
						</moviePoster>
						<moviePoster id="fivesix" featured="true" onSelect="fivesixClient.loadIndexPage('',1,'dsj');">
							<image>http://www.clican.org/appletv/image/fivesix/fivesix.png</image>
							<title>56视频</title>
						</moviePoster>
						<moviePoster id="yyets" featured="true" onSelect="yyetsClient.loadIndexPage('',1,'movie');">
							<image>http://www.clican.org/appletv/image/yyets/yyets.png</image>
							<title>人人影视</title>
						</moviePoster>
						<moviePoster id="lbl" featured="true" onSelect="lblClient.loadIndexPage('',1,'category/movie');">
							<image>http://www.clican.org/appletv/image/lbl/lbl.png</image>
							<title>龙部落</title>
						</moviePoster>
						<moviePoster id="native_tu" featured="true" onSelect="tuClient.loadIndexPage('',1,15);">
							<image>http://www.clican.org/appletv/image/tu/tu.png</image>
							<title>迅播影院</title>
						</moviePoster>
						<moviePoster id="baibian"
							featured="true" onSelect="atv.loadURL('http://www.clican.org/appletv/ctl/baibian/index.xml');">
							<image>http://www.clican.org/appletv/image/baibian/baibian.png</image>
							<title>微电影</title>
						</moviePoster>
						<moviePoster id="weivideo"
							featured="true" onSelect="weivideoClient.loadIndexPage('',1,'1');">
							<image>http://local.clican.org/appletv/image/weivideo/weivideo.png</image>
							<title>微视频</title>
						</moviePoster>
						<moviePoster id="weibo"
							featured="true" onSelect="atv.loadURL('http://clican.org/appletv/ctl/weibo/checkAccessToken.xml?deviceId='+atv.device.udid);">
							<image>http://www.clican.org/appletv/image/weibo/weibo.png</image>
							<title>新浪微博</title>
						</moviePoster>
						<moviePoster id="taobao"
							featured="true" onSelect="atv.loadURL('http://www.clican.org/appletv/ctl/taobao/index.xml');">
							<image>http://www.clican.org/appletv/image/taobao/taobao.png</image>
							<title>淘宝</title>
						</moviePoster>
						<moviePoster id="favorite"
							featured="true" onSelect="appletv.loadFavoritePage();">
							<image>http://www.clican.org/appletv/image/favorite.png</image>
							<title>收藏</title>
						</moviePoster>
						<moviePoster id="announcement"
							featured="true" onSelect="atv.loadURL('http://www.clican.org/appletv/release.xml');">
							<image>http://www.clican.org/appletv/image/announcements.png</image>
							<title>升级公告</title>
						</moviePoster>
					</items>
				</grid>
			</items>
		</scroller>
	</body>
</atv>
