<?xml version="1.0" encoding="UTF-8"?>
<atv>
	<head>
		<script src="http://www.clican.org/appletv/javascript/clican.js" />
		<script src="http://www.clican.org/appletv/javascript/ejs.js" />
		<script src="http://www.clican.org/appletv/javascript/qq.js" />
		<script src="http://www.clican.org/appletv/javascript/yyets.js" />
		<script src="http://www.clican.org/appletv/javascript/tudou.js" />
		<script src="http://www.clican.org/appletv/javascript/youku.js" />
		<script src="http://www.clican.org/appletv/javascript/lbl.js" />
		<script src="http://www.clican.org/appletv/javascript/fivesix.js" />
	</head>
	<body>
		<scroller id="com.sample.movie-shelf">
			<items>
				<grid id="grid_2" columnCount="4">
					<items>
						<goldenPoster id="local" onSelect="appletv.loadLocalServerIndexPage();">
							<image>http://www.clican.org/appletv/image/local.png</image>
							<title>本地服务器</title>
						</goldenPoster>
						<goldenPoster id="youku" onSelect="youkuClient.loadIndexPage('',1,96);">
							<image>http://www.clican.org/appletv/image/youku/youku.png</image>
							<title>优库</title>
						</goldenPoster>
						<goldenPoster id="tudou"
							onSelect="tudouClient.loadIndexPage('',1,30);">
							<image>http://www.clican.org/appletv/image/tudou/tudou.png</image>
							<title>土豆视频</title>
						</goldenPoster>
						<goldenPoster id="qq" onSelect="qqClient.loadIndexPage('',0,3);">
							<image>http://www.clican.org/appletv/image/qq/qq.png</image>
							<title>腾讯视频</title>
						</goldenPoster>
						<goldenPoster id="fivesix" onSelect="fivesixClient.loadIndexPage('',1,'dsj');">
							<image>http://www.clican.org/appletv/image/fivesix/fivesix.png</image>
							<title>56视频</title>
						</goldenPoster>
						<goldenPoster id="yyets" onSelect="yyetsClient.loadIndexPage('',1,'movie');">
							<image>http://www.clican.org/appletv/image/yyets/yyets.jpg</image>
							<title>人人影视</title>
						</goldenPoster>
						<goldenPoster id="lbl" onSelect="lblClient.loadIndexPage('',1,'category/movie');">
							<image>http://www.clican.org/appletv/image/lbl/lbl.png</image>
							<title>龙部落</title>
						</goldenPoster>
						<goldenPoster id="baibian"
							onSelect="atv.loadURL('http://www.clican.org/appletv/ctl/baibian/index.xml');">
							<image>http://www.clican.org/appletv/image/baibian/baibian.png</image>
							<title>微电影</title>
						</goldenPoster>
						<goldenPoster id="weibo"
							onSelect="atv.loadURL('http://www.clican.org/appletv/ctl/weibo/checkAccessToken.xml?deviceId='+atv.device.udid);">
							<image>http://www.clican.org/appletv/image/weibo/weibo.png</image>
							<title>新浪微博</title>
						</goldenPoster>
						<goldenPoster id="taobao"
							onSelect="atv.loadURL('http://www.clican.org/appletv/ctl/taobao/index.xml');">
							<image>http://www.clican.org/appletv/image/taobao/taobao.png</image>
							<title>淘宝</title>
						</goldenPoster>
						<goldenPoster id="favorite"
							onSelect="appletv.loadFavoritePage();">
							<image>http://www.clican.org/appletv/image/favorite.png</image>
							<title>收藏</title>
						</goldenPoster>
						<goldenPoster id="announcement"
							onSelect="atv.loadURL('http://www.clican.org/appletv/release.xml');">
							<image>http://www.clican.org/appletv/image/announcements.png</image>
							<title>升级公告</title>
						</goldenPoster>
					</items>
				</grid>
			</items>
		</scroller>
	</body>
</atv>
