<?xml version="1.0" encoding="UTF-8"?>
<atv>
<head>
<script src="<%=serverurl%>/javascript/clican.js"/>
<script src="<%=serverurl%>/javascript/ejs.js"/>
<script src="<%=serverurl%>/javascript/tudou.js"/>
</head>
<body>
<itemDetail id="itemdetail">
			<title><%=video['title']%></title>
			<summary><%=video['desc']%></summary>
			<image style="moviePoster"><%=video['pic']%></image>
			<table>
				<columnDefinitions><columnDefinition width="50"><title>其他信息</title></columnDefinition><columnDefinition width="50"><title></title></columnDefinition></columnDefinitions>
				<rows>
					<row><label><![CDATA[导演:<%=video['dctor']%>]]></label><label><![CDATA[年代:<%=video['year']%>]]></label></row>
					<row><label><![CDATA[评分:<%=video['score']%>]]></label><label><![CDATA[地区:<%=video['area']%>]]></label></row>
					<row><label><![CDATA[剧集:共<%=items.length%>集]]></label><label><![CDATA[主演:<%=video['actor']%>]]></label></row>
				</rows>
			</table>
			<centerShelf>
				<shelf id="album">
					<sections>
						<shelfSection>
							<items>
								<%if(album==1){%>
									<actionButton id="album_1" onSelect="tudouClient.loadItemsPage('<%=video['id']%>',<%=channelId%>,2);">
										<title>标清</title>
									</actionButton>
									<actionButton id="album_2" onSelect="tudouClient.loadItemsPage('<%=video['id']%>',<%=channelId%>,3);">
										<title>高清</title>
									</actionButton>
									<actionButton id="album_3" onSelect="tudouClient.loadItemsPage('<%=video['id']%>',<%=channelId%>,4);">
										<title>超清</title>
									</actionButton>
								<%}else{%>
									<actionButton id="album_1" onSelect="tudouClient.play('<%=video['id']%>',2);">
										<title>标清</title>
									</actionButton>
									<actionButton id="album_2" onSelect="tudouClient.play('<%=video['id']%>',2);">
										<title>高清</title>
									</actionButton>
									<actionButton id="album_3" onSelect="tudouClient.play('<%=video['id']%>',2);">
										<title>超清</title>
									</actionButton>
								<%}%>
								<actionButton id="album_8" onSelect="atv.loadURL('<%=serverurl%>/ctl/weibo/createStatus.xml?deviceId='+atv.device.udid+'&amp;title='+encodeURIComponent('<%=video['title']%>')+'&amp;shareURL=<%=video['shareurl']%>&amp;imageURL=<%=video['pic']%>');" onPlay="atv.loadURL('<%=serverurl%>/ctl/weibo/createStatus.xml?deviceId='+atv.device.udid+'&amp;title='+encodeURIComponent('<%=video['title']%>')+'&amp;shareURL=<%=video['shareurl']%>&amp;imageURL=<%=video['pic']%>');">
									<title>分享</title>
								</actionButton>
							</items>
						</shelfSection>
					</sections>
				</shelf>
			</centerShelf>
		</itemDetail>
</body>
</atv>