<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/white" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >
		
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:background="@color/headBackgroundColor"
            android:orientation="horizontal" >
             <Button
                android:id="@+id/yyy_result_backButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="20dp"
                android:background="@drawable/nav_back_icon" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:gravity="center"
                android:text="摇一摇     领红包"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/labelTextColor" />

            <TextView
                android:id="@+id/yyy_result_msg1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="33dp"
                android:gravity="center"
                android:text="恭喜！经你 石破天惊一摇 获得了"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/labelTextColor" />

            <Button
                android:id="@+id/yyy_result_getAward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="119dp"
                android:layout_marginLeft="14dp"
                android:text="兑换奖励" />

            <Button
                android:id="@+id/yyy_result_myAward"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBaseline="@+id/yyy_result_getAward"
                android:layout_alignBottom="@+id/yyy_result_getAward"
                android:layout_alignParentRight="true"
                android:layout_marginRight="25dp"
                android:text="我获得的奖励" />

            <Button
                android:id="@+id/yyy_result_next_action"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/yyy_result_msg2"
                android:layout_centerHorizontal="true"
                android:layout_centerInParent="false"
                android:layout_centerVertical="false"
                android:layout_marginTop="80dp"
                android:text="再摇一次" />

            <TextView
                android:id="@+id/yyy_result_msg2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/yyy_result_msg1"
                android:layout_marginTop="25dp"
                android:gravity="center"
                android:text="10 流量币"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/labelTextColor" />

            <TextView
                android:id="@+id/yyy_result_msg3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/yyy_result_msg2"
                android:layout_marginTop="35dp"
                android:gravity="center"
                android:text="你现在拥有150个流量币"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/labelTextColor" />

        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>