	<bean id="auditing" class="com.clican.pluto.fsm.engine.vote.HighPriorityVoteTask"
		autowire="byName" lazy-init="true">
		<property name="name" value="auditing"></property>
		<property name="nextState" ref="audit" />
		<property name="assignees" value="leaders" />
	</bean>

	<bean id="audit" class="com.clican.pluto.fsm.engine.state.DecisionStateImpl"
		autowire="byName" lazy-init="true">
		<property name="name" value="audit"></property>
		<property name="conditionNextStateMap">
			<map>
				<entry>
					<key>
						<value>voteResult=='disagree'||voteResult=='disclaim'
						</value>
					</key>
					<ref bean="revise" />
				</entry>
				<entry>
					<key>
						<value>voteResult=='agree'</value>
					</key>
					<ref bean="pass" />
				</entry>
			</map>
		</property>
	</bean>

	<bean id="revise" class="com.clican.pluto.fsm.engine.state.TaskStateImpl"
		autowire="byName" lazy-init="true">
		<property name="name" value="revise"></property>
		<property name="nextState" ref="auditing" />
		<property name="assignees" value="sponsor" />
	</bean>

	<bean id="pass" class="com.clican.pluto.fsm.engine.state.EndStateImpl"
		autowire="byName">
		<property name="name" value="pass"></property>
	</bean>

</beans>