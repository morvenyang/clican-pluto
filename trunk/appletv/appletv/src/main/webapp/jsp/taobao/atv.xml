<?xml version="1.0" encoding="UTF-8"?>
<atv xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:noNamespaceSchemaLocation="atv.xsd">
	<body>
		<scroller id="com.sample.movie-shelf">
			<items>
				<grid id="address_grid" columnCount="1">
					<items>
						<moviePoster id="shelf_item_${item.numIid}"
							alwaysShowTitles="true"
							onSelect="atv.loadURL('${serverurl}/ctl/taobao/item.xml?itemId=${item.numIid}&amp;volume=${item.volume}');"
							onPlay="atv.loadURL('${serverurl}/ctl/taobao/item.xml?itemId=${item.numIid}&amp;volume=${item.volume}');">
							<title><![CDATA[${item.title}]]></title>
							<subtitle><![CDATA[￥${item.price} 最近售出${item.volume}]]></subtitle>
							<image>${item.picUrl}</image>
							<defaultImage>resource://Poster.png</defaultImage>
						</moviePoster>
					</items>
				</grid>
			</items>
		</scroller>
	</body>
</atv>
