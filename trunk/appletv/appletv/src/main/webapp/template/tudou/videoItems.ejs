<?xml version="1.0" encoding="UTF-8"?>
<atv>
<head>
<script src="<%=serverurl%>/javascript/clican.js"/>
<script src="<%=serverurl%>/javascript/ejs.js"/>
<script src="<%=serverurl%>/javascript/tudou.js"/>
</head>
<body>
		<listScrollerSplit id="bbbb">
			<header>
				<simpleHeader horizontalAlignment="left">
					<title><![CDATA[<%=video['title']%>]]></title>
					<image src="<%=video['pic']%>"></image>
				</simpleHeader>
			</header>
			<menu>
				<sections>
					<menuSection>
						<items>
							<%for(var i=0;i<items.length;i++){%>
								<%if(items[i]['vcode']!=null&&items[i]['vcode'].length>0){%>
									<oneLineMenuItem id="albumItem_<%=i%>" onPlay="tudouClient.play('<%=items[i]['vcode']%>');" onSelect="tudouClient.play('<%=items[i]['vcode']%>');">
										<label><%=items[i]['title']%></label>
									</oneLineMenuItem>
								<%}else{%>
									<oneLineMenuItem id="albumItem_<%=i%>" onPlay="tudouClient.playByItemid('<%=items[i]['itemid']%>');" onSelect="tudouClient.playByItemid('<%=items[i]['itemid']%>');">
										<label><%=items[i]['title']%></label>
									</oneLineMenuItem>
								<%}%>
							<%}%>
						</items>
					</menuSection>
				</sections>
			</menu>
		</listScrollerSplit>
	</body>
</atv>