<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="
http://www.springframework.org/schema/beans
http://www.springframework.org/schema/beans/spring-beans-2.5.xsd">

	<bean id="start" class="com.clican.pluto.fsm.engine.state.StartStateImpl"
		autowire="byName">
		<property name="name" value="start"></property>
		<property name="nextState" ref="audit" />
		<property name="propagation" value="session" />
	</bean>

	<bean id="audit" class="com.clican.pluto.fsm.engine.vote.AnyOnePassButWaitForAllVoteTask"
		autowire="byName" lazy-init="true">
		<property name="name" value="audit"></property>
		<property name="nextState" ref="auditResult" />
		<property name="assignees" value="auditors" />
	</bean>

	<bean id="auditResult" class="com.clican.pluto.fsm.engine.state.DecisionStateImpl"
		autowire="byName" lazy-init="true">
		<property name="name" value="auditResult"></property>
		<property name="conditionNextStateMap">
			<map>
				<entry>
					<key>
						<value>voteResult=='disagree'||voteResult=='disclaim'
						</value>
					</key>
					<ref bean="audit" />
				</entry>
				<entry>
					<key>
						<value>voteResult=='agree'</value>
					</key>
					<ref bean="end" />
				</entry>
			</map>
		</property>
	</bean>
	
	<bean id="end" class="com.clican.pluto.fsm.engine.state.EndStateImpl"
		autowire="byName">
		<property name="name" value="end"></property>
	</bean>

</beans>