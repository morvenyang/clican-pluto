package com.clican.pluto.orm.model.dynamic;

import java.util.Set;

import javax.persistence.*;
import com.clican.pluto.orm.annotation.DynamicClass;

import javax.persistence.CascadeType;
import javax.persistence.Column;
import javax.persistence.FetchType;
import javax.persistence.GeneratedValue;
import javax.persistence.GenerationType;
import javax.persistence.Id;
import javax.persistence.OneToMany;

import com.clican.pluto.orm.dynamic.inter.ISite;
import com.clican.pluto.orm.dynamic.inter.ISiteDirectoryRelation;

@DynamicClass
@Entity(name="Site")
@Table(name = "SITE")
public class Site implements ISite {

    /**
     * 
     */
    private static final long serialVersionUID = 2759911213321898941L;

    private Long id;

    private String name;

    private String url;

    private String username;

    private String password;

    private Set<ISiteDirectoryRelation> siteDirectoryRelationSet;

    @Id
    @GeneratedValue(strategy = GenerationType.AUTO)
    @Column(name = "ID")
    public Long getId() {
        return id;
    }

    public void setId(Long id) {
        this.id = id;
    }

    @Column
    public String getName() {
        return name;
    }

    public void setName(String name) {
        this.name = name;
    }

    @Column
    public String getUrl() {
        return url;
    }

    public void setUrl(String url) {
        this.url = url;
    }

    @Column
    public String getUsername() {
        return username;
    }

    public void setUsername(String username) {
        this.username = username;
    }

    @Column
    public String getPassword() {
        return password;
    }

    public void setPassword(String password) {
        this.password = password;
    }

    @OneToMany(mappedBy = "parent", cascade = CascadeType.ALL, fetch = FetchType.LAZY,targetEntity=SiteDirectoryRelation.class)
    public Set<ISiteDirectoryRelation> getSiteDirectoryRelationSet() {
        return siteDirectoryRelationSet;
    }

    public void setSiteDirectoryRelationSet(Set<ISiteDirectoryRelation> siteDirectoryRelationSet) {
        this.siteDirectoryRelationSet = siteDirectoryRelationSet;
    }

}