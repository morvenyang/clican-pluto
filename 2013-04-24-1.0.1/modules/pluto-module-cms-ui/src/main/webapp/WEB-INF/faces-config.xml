<?xml version='1.0' encoding='UTF-8'?>
<faces-config version="1.2" xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd">
	<application>
		<locale-config>
			<default-locale>en</default-locale>
		</locale-config>
		<variable-resolver>
			org.springframework.web.jsf.DelegatingVariableResolver
		</variable-resolver>
	</application>
	<render-kit>
		<render-kit-id>HTML_BASIC</render-kit-id>
		<renderer>
			<component-family>org.richfaces.ModalPanel</component-family>
			<renderer-type>org.richfaces.ModalPanelRenderer</renderer-type>
			<renderer-class>com.clican.pluto.cms.ui.ext.renderer.ModalPanelRenderer</renderer-class>
		</renderer>
	</render-kit>
</faces-config>
